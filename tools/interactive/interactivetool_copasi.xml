<tool id="interactive_tool_copasi" tool_type="interactive" name="COPASI" version="@VERSION@" profile="22.05">
    <description>Biochemical System Simulator</description>
    <macros>
        <token name="@VERSION@">4.44.295-0</token>
    </macros>
    <requirements>
        <container type="docker">quay.io/galaxy/copasi-headless:@VERSION@</container>
    </requirements>
    <entry_points>
        <entry_point name="COPASI" requires_domain="True">
            <port>5800</port>
        </entry_point>
    </entry_points>
    <command detect_errors="exit_code">
    <![CDATA[
        mkdir -p /data/outputs &&
        #if $infile:
            ln -s '$infile' /data/infile.sbml &&
        #end if
        chown 1000:1000 /data/outputs && ## the app user of the container
        /init
    ]]>
    </command>
    <inputs>
        <param name="infile" type="data" format="sbml" optional="true" label="Input file in SMBL format"/>
    </inputs>
    <outputs>
        <data name="final_smbl" format="sbml" label="${tool.name} on ${on_string}" from_work_dir="/data/outputs/result.smbl"/>
        <!--collection name="outputs" type="list" label="PhysiCell outputs">
            <discover_datasets pattern="__name_and_ext__" directory="outputs" />
        </collection-->
    </outputs>
    <tests>
    </tests>
    <help><![CDATA[

COPASI is software used for the creation, modification, simulation and computational analysis of kinetic models in various fields.

]]>
    </help>
    <citations>
        <citation type="doi">10.1016/j.jbiotec.2017.06.1200</citation>
    </citations>
</tool>
